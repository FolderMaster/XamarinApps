<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/expressionTextView"
        android:textSize="@dimen/ExpressionSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/resultTextView"
        android:textSize="@dimen/ResultSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/LayoutMargin"
        android:columnCount="5"
        android:rowCount="5">
        <Button
            android:id="@+id/partDeletionButton"
            android:text="@string/PartDeletionSymbol"
            android:layout_width="@dimen/ButtonSize"
            android:layout_height="@dimen/ButtonSize"
            android:layout_column="0"
            android:layout_row="0"/>
        <Button
            android:id="@+id/fullDeletionButton"
            android:text="@string/FullDeletionSymbol"
            android:layout_width="@dimen/ButtonSize"
            android:layout_height="@dimen/ButtonSize"
            android:layout_column="1"
            android:layout_row="0"/>
        <Button
            android:id="@+id/singleDeletionButton"
            android:text="@string/SingleDeletionSymbol"
            android:layout_width="@dimen/ButtonSize"
            android:layout_height="@dimen/ButtonSize"
            android:layout_column="2"
            android:layout_row="0"/>
        <Button
            android:id="@+id/oneButton"
            android:text="@string/OneSymbol"
            android:layout_width="@dimen/ButtonSize"
            android:layout_height="@dimen/ButtonSize"
            android:layout_column="0"
            android:layout_row="1"/>
        <Button
            android:id="@+id/twoButton"
            android:text="@string/TwoSymbol"
            android:layout_width="@dimen/ButtonSize"
            android:layout_height="@dimen/ButtonSize"
            android:layout_column="1"
            android:layout_row="1"/>
        <Button
            android:id="@+id/threeButton"
            android:text="@string/ThreeSymbol"
            android:layout_width="@dimen/ButtonSize"
            android:layout_height="@dimen/ButtonSize"
            android:layout_column="2"
            android:layout_row="1"/>
        <Button
            android:id="@+id/fourButton"
            android:text="@string/FourSymbol"
            android:layout_width="@dimen/ButtonSize"
            android:layout_height="@dimen/ButtonSize"
            android:layout_column="0"
            android:layout_row="2"/>
        <Button
            android:id="@+id/fiveButton"
            android:text="@string/FiveSymbol"
            android:layout_width="@dimen/ButtonSize"
            android:layout_height="@dimen/ButtonSize"
            android:layout_column="1"
            android:layout_row="2"/>
        <Button
            android:id="@+id/sixButton"
            android:text="@string/SixSymbol"
            android:layout_width="@dimen/ButtonSize"
            android:layout_height="@dimen/ButtonSize"
            android:layout_column="2"
            android:layout_row="2"/>
        <Button
            android:id="@+id/sevenButton"
            android:text="@string/SevenSymbol"
            android:layout_width="@dimen/ButtonSize"
            android:layout_height="@dimen/ButtonSize"
            android:layout_column="0"
            android:layout_row="3"/>
        <Button
            android:id="@+id/eightButton"
            android:text="@string/EightSymbol"
            android:layout_width="@dimen/ButtonSize"
            android:layout_height="@dimen/ButtonSize"
            android:layout_column="1"
            android:layout_row="3"/>
        <Button
            android:id="@+id/nineButton"
            android:text="@string/NineSymbol"
            android:layout_width="@dimen/ButtonSize"
            android:layout_height="@dimen/ButtonSize"
            android:layout_column="2"
            android:layout_row="3"/>
        <Button
            android:id="@+id/zeroButton"
            android:text="@string/ZeroSymbol"
            android:layout_width="@dimen/ButtonSize"
            android:layout_height="@dimen/ButtonSize"
            android:layout_column="1"
            android:layout_row="4"/>
        <Button
            android:id="@+id/additionButton"
            android:text="@string/AdditionSymbol"
            android:layout_width="@dimen/ButtonSize"
            android:layout_height="@dimen/ButtonSize"
            android:layout_column="3"
            android:layout_row="1"/>
        <Button
            android:id="@+id/subtractionButton"
            android:text="@string/SubtractionSymbol"
            android:layout_width="@dimen/ButtonSize"
            android:layout_height="@dimen/ButtonSize"
            android:layout_column="4"
            android:layout_row="1"/>
        <Button
            android:id="@+id/multiplicationButton"
            android:text="@string/MultiplicationSymbol"
            android:layout_width="@dimen/ButtonSize"
            android:layout_height="@dimen/ButtonSize"
            android:layout_column="3"
            android:layout_row="2"/>
        <Button
            android:id="@+id/equationButton"
            android:text="@string/EquationSymbol"
            android:layout_width="@dimen/ButtonSize"
            android:layout_height="@dimen/ButtonSize"
            android:layout_column="3"
            android:layout_row="4"/>
        <Button
            android:id="@+id/percentButton"
            android:text="@string/PercentSymbol"
            android:layout_width="@dimen/ButtonSize"
            android:layout_height="@dimen/ButtonSize"
            android:layout_column="3"
            android:layout_row="3"/>
        <Button
            android:id="@+id/divisionButton"
            android:text="@string/DivisionSymbol"
            android:layout_width="@dimen/ButtonSize"
            android:layout_height="@dimen/ButtonSize"
            android:layout_column="4"
            android:layout_row="2"/>
        <Button
            android:id="@+id/pointButton"
            android:text="@string/PointSymbol"
            android:layout_width="@dimen/ButtonSize"
            android:layout_height="@dimen/ButtonSize"
            android:layout_column="0"
            android:layout_row="4"/>
        <Button
            android:id="@+id/moduloButton"
            android:text="@string/ModuloSymbol"
            android:layout_width="@dimen/ButtonSize"
            android:layout_height="@dimen/ButtonSize"
            android:layout_column="4"
            android:layout_row="3"/>
        <Button
            android:id="@+id/moduloDivisionButton"
            android:text="@string/ModuloDivisionSymbol"
            android:layout_width="@dimen/ButtonSize"
            android:layout_height="@dimen/ButtonSize"
            android:layout_column="4"
            android:layout_row="4"/>
        <Button
            android:id="@+id/rootButton"
            android:text="@string/RootSymbol"
            android:layout_width="@dimen/ButtonSize"
            android:layout_height="@dimen/ButtonSize"
            android:layout_column="2"
            android:layout_row="4"/>
    </GridLayout>
</LinearLayout>